<launch>
    <arg name="plugin" default="false"/>
    <arg name="disp" default="screen"/>
    <!--Camera settings-->
    <arg name="left" default="25001110"/>
    <arg name="right" default="25000855"/>
    <arg name="left_calib" default="calib_$(arg left)"/>
    <arg name="left_calib_url" default="package://bluefox2/calib/$(arg left_calib).yml"/>
    <arg name="right_calib" default="calib_$(arg right)"/>
    <arg name="right_calib_url" default="package://bluefox2/calib/$(arg right_calib).yml"/>
    <arg name="fps" default="20"/>
    <arg name="color" default="false"/>
    <arg name="expose" default="5000"/>
    <arg name="binning" default="false"/>
    <arg name="gain" default="0.0"/>
    <arg name="trigger" default="1"/>

    <!--Run as standalone-->
    <node unless="$(arg plugin)" pkg="nodelet" type="nodelet"
        name="stereo_nodelet" args="standalone bluefox2/StereoNodelet"
        output="$(arg disp)">
        <param name="left" type="string" value="$(arg left)"/>
        <param name="right" type="string" value="$(arg right)"/>
        <param name="fps" type="int" value="$(arg fps)"/>
        <param name="color" type="bool" value="$(arg color)"/>
        <param name="expose" type="int" value="$(arg expose)"/>
        <param name="binning" type="bool" value="$(arg binning)"/>
        <param name="gain" type="double" value="$(arg gain)"/>
        <param name="trigger" type="int" value="$(arg trigger)"/>
        <param name="left_calib_url" type="string" value="$(arg left_calib_url)"/>
        <param name="right_calib_url" type="string" value="$(arg right_calib_url)"/>
    </node>

    <!--Run as plugin-->
    <arg name="manager" default="stereo_nodelet"/>
    <node if="$(arg plugin)" pkg="nodelet" type="nodelet"
        name="$(arg manager)" args="manager" output="$(arg disp)">
    </node>
    <node if="$(arg plugin)" pkg="nodelet" type="nodelet"
        name="stereo" args="load bluefox2/StereoNodelet $(arg manager)"
        output="$(arg disp)">
        <param name="left" type="string" value="$(arg left)"/>
        <param name="right" type="string" value="$(arg right)"/>
        <param name="fps" type="int" value="$(arg fps)"/>
        <param name="color" type="bool" value="$(arg color)"/>
        <param name="expose" type="int" value="$(arg expose)"/>
        <param name="binning" type="bool" value="$(arg binning)"/>
        <param name="gain" type="double" value="$(arg gain)"/>
        <param name="trigger" type="int" value="$(arg trigger)"/>
        <param name="left_calib_url" type="string" value="$(arg left_calib_url)"/>
        <param name="right_calib_url" type="string" value="$(arg right_calib_url)"/>
    </node>
</launch>
